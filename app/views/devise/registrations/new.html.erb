<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, required: true %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name, required: true %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :username, required: true %><br />
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :birthday, required: true %><br />
    <%= f.date_select "birthday", prompt: {day: 'Select day', month: 'Select month', year: 'Select year'}, start_year: Date.today.year - 100, end_year: Date.today.year %>
  </div>

  <div class="form-group">
    <%= f.label :gender, required: true %> <br>
    <%= f.radio_button :gender, "male" %>
    <%= f.label :gender, "male" %>
    <%= f.radio_button :gender, "female" %>
    <%= f.label :gender, "female" %>
  </div>


  <%= f.label :interests, required: true %> <i>(Click the categories to expand them. Please select at least 2.)</i>
  <% interests.group_by(&:category).each_with_index do |(category, interests), index| %>
  <div class="panel-group" id="accordion<%= index %>" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
      <div class="panel-heading custom" role="tab" id="heading<%= index %>">
        <h4 class="panel-title">
          <a role="button" data-toggle="collapse" data-parent="#accordion<%= index %>" href="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
           <strong><%= category %></strong>
          </a>
        </h4>
      </div>
      <div id="collapse<%= index %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%= index %>">
        <div class="panel-body custom">
        <% interests.group_by(&:subcategory).each do |subcategory, interests| %>
           <div class="panel-group" id="accordion-<%= subcategory.gsub(' ','-') %>">
            <div class="panel panel-default">
              <div class="panel-heading custom" id="heading-<%= subcategory.gsub(' ','-') %>">
                <h4 class="panel-title">
                  <a role="button" data-toggle="collapse" data-parent="#accordion-<%= subcategory.gsub(' ','-') %>" href="#collapse-<%= subcategory.gsub(' ','-') %>" aria-expanded="true" aria-controls="collapse-<%= subcategory.gsub(' ','-') %>">
                   <strong><%= subcategory %></strong>
                  </a>
                </h4>
              </div>
              <div id="collapse-<%= subcategory.gsub(' ','-') %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading-<%= subcategory.gsub(' ','-') %>">
                <div class="panel-body custom">
                  <% interests.each do |interest| %>
                  <%= f.check_box :interests, {multiple: true}, interest.name, nil %>
                  <%= f.label interest.name, interest.name %> <br>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

  <div class="form-group">
    <%= f.label :password, required: true %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, required: true %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <h3>Optional Fields</h3>
  
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <br>

  <div>
    <h4>Select holidays below that are important to you.</h4>
     <p>If your followers choose to tag you, they'll get reminders about your special days. We automatically include your birthday.</p>
    <% holidays.each do |holiday| %><br>
    <%= f.check_box :special_days, {multiple: true}, "#{holiday[:name]}:#{holiday[:date]}", nil %>
    <%= f.label holiday[:name], holiday[:name] %>
    <% end %>
  </div>

  <div>
    <h4>Add your own special occasions:</h4>
    <p>You can add your own special occasions below. Some ideas would be anniversary; upcoming wedding, baby, or graduation; bar/bat mitzvah; and quincea&#241;era</p>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

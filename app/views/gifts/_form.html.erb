<div class="container">

	<%= form_for gift do |f| %>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :url %>
		<%= f.text_area :url, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :wishlist %>
		<%= f.collection_select :wishlist, @wishlists, :id, :name, class: "form-control" %>
	</div>
	
	<div class="actions">
		<%= f.submit "Create Gift", class: "btn btn-primary" %>
	</div>

	<% end %>

</div>
<%= link_to new_gift_path, class: "pull-right btn btn-primary" do %>
	<i class="glyphicon glyphicon-plus"></i> New Gift
<% end %>
<h1>All Gifts</h1>

<% @gifts.each do |gift| %>
<div class="well col-md-3">
	<div class="title">
		<h3><%= gift.name.titlecase %></h3>
		<%= link_to gift do %>
			<% if gift.image_file_name.nil? %>
				<%= image_tag gift.url %>
			<% else %>
				<%= image_tag gift.image.url(:thumb) %>
			<% end %>
		<% end %>
	</div>
		<p>From: <%= link_to gift.wishlist.name, wishlist_path(id: gift.wishlist_id) %></p>
	<p>Description: <%= gift.description %></p>
	<h6><%= link_to "Source", gift.url, target: "blank" %></h6>
	<hr>
	<%= link_to "Edit", edit_gift_path(id: gift.id), class: "btn btn-primary" %>
	<%= link_to "Delete", gift_path(id: gift.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
</div>

<% end %>

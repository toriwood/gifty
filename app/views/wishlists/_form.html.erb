<%= form_for wishlist do |f| %>

<div class="form-group">
	<%= f.label :name %> <br>
	<%= f.text_field :name, autofocus: true, class: "form-control" %>
</div>

<%= f.hidden_field(:user_id, :value=>current_user.id) %>

<div class="actions">
	<%= f.submit "Submit", class: 'btn btn-primary' %> <br>
</div>

<% end %>
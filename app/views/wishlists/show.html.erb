<div class="container show">
<h3><%= wishlist.name %></h3>
<h4>By: <%= link_to wishlist.user.username, wishlist.user %></h4>


<% if user_signed_in? && current_user.id == wishlist.user_id %>
<%= link_to edit_wishlist_path(id: wishlist.id), class: "btn btn-primary" do %>
	<i class="glyphicon glyphicon-pencil"></i> Edit
<% end %>
<%= link_to wishlist_path, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this wishlist and all of the gifts along with it?' } do %>
	<i class="glyphicon glyphicon-remove"></i> Delete Wishlist
<% end %>
<% end %>
</div>

<hr>

<div class="grid">
	<% if user_signed_in? && current_user.id == wishlist.user.id %>
		<%= link_to new_gift_path(wishlist) do %>
		<div class="well add-new">
			<div class="plus-sign">
				<i class="glyphicon glyphicon-plus"></i>
			</div>
			<br>
			Add A Gift
		</div>
		<% end %>
	<% end %>
	
	<div class="clearfix"></div>
	
		<%= render 'gifts/gifts' %>
	</div>
</div>
<h1><strong><%= interest.name %></strong></h1>

<div class="well">
	<% @gifts.each do |gift| %>
		<% if gift.user.interests.include?(interest.name) %>
			<h1><strong><%= link_to gift.name.titlecase, gift %></strong></h1>
			<p>From: <%= link_to gift.wishlist.name, wishlist_path(id: gift.wishlist_id) %></p>
			<p><%= link_to "Source", gift.url, target: "blank" %></p>
			<p>Description: <%= gift.description %></p>
		<% end %>
	<% end %>
</div>